% 页眉样式定义.
\newdimen\beamer@scu@len@secbarY% 章节导航栏 y 值
\newdimen\beamer@scu@len@subsecbarY% 小节导航栏 y 值
\newdimen\beamer@scu@len@miniframesX% 迷你帧 x 值
\newdimen\beamer@scu@len@miniframesY% 迷你帧 y 值
\def\beamer@scu@headline{%
  % 填充内容盒子.
  \setbox\beamer@scu@box@secbar=\hbox{%
    \insert@secbar{\beamer@scu@wd@headlineskip}}% 设置章节导航栏盒子, 内容右对齐
  \setbox\beamer@scu@box@subsecbar=\hbox{\insert@subsecbar}% 设置小节导航栏盒子
  % 设置 dimen.
  \beamer@scu@wd@subsecbar=\wd\beamer@scu@box@subsecbar% 设置小节导航栏宽度
  \beamer@scu@len@secbarY=\dimexpr.5\beamer@scu@ht@headline%
    -.5\ht\beamer@scu@box@secbar+.25\dp\beamer@scu@box@secbar\relax% 设置章节导航栏 y 值
  \beamer@scu@len@subsecbarY=\dimexpr.5\beamer@scu@ht@headline+1pt%
    -.5\ht\beamer@scu@box@subsecbar+.5\dp\beamer@scu@box@subsecbar\relax% 设置小节导航栏 y 值
  % 使用 picture 环境定位及绘制 Headline.
  \begin{picture}(0, 0)%
    \put(0, 0){\usebox{\beamer@scu@box@headlineBg}}% 绘制 Headline 底图
    \put(\paperwidth, \beamer@scu@len@secbarY){%
      \makebox[0pt][r]{\box\beamer@scu@box@secbar}}% 绘制章节栏水平导航
    \put(\beamer@scu@wd@headlineskip, \beamer@scu@len@subsecbarY){%
      \box\beamer@scu@box@subsecbar}% 绘制小节导航栏
    % 迷你帧跟随模式.
    \if\EqualOptionsBeamer{Miniframes}{follow}%
      \setbox\beamer@scu@box@miniframes=\hbox{\parbox{%
        \dimexpr\beamer@scu@wd@sectotitleline-\beamer@scu@wd@subsecbar\relax}{%
          \insert@subsecminiframes{3.6pt}{1.6pt}}}% 设置迷你帧盒子
      \beamer@scu@len@miniframesX=\dimexpr\beamer@scu@wd@headlineskip%
        +\beamer@scu@wd@subsecbar+2.4pt\relax% 设置迷你帧 x 值
      \beamer@scu@len@miniframesY=\dimexpr.5\beamer@scu@ht@headline+1pt-.75pt%
        -.5\ht\beamer@scu@box@miniframes+.5\dp\beamer@scu@box@miniframes\relax% 设置迷你帧 y 值
      \put(\beamer@scu@len@miniframesX, \beamer@scu@len@miniframesY){%
        \box\beamer@scu@box@miniframes}% 绘制小节迷你帧
    % 迷你帧分离模式.
    \else\if\EqualOptionsBeamer{Miniframes}{separate}%
      \setbox\beamer@scu@box@miniframes=\hbox{%
        \insert@subsecminiframes{3.6pt}{1.6pt}}% 设置迷你帧盒子
      \beamer@scu@len@miniframesX=\dimexpr\paperwidth%
        -\beamer@scu@wd@headlineskip+1.6pt\relax% 设置迷你帧 x 值
      \put(\beamer@scu@len@miniframesX, -6){%
        \makebox[0pt][r]{\box\beamer@scu@box@miniframes}}% 绘制小节迷你帧
    % 迷你帧取消模式.
    \else\if\EqualOptionsBeamer{Miniframes}{none}%
      \relax%
    \fi\fi\fi%
  \end{picture}%
}


% 设置帧页码计数器(正文/附录).
\def\beamer@scu@framenumber{%
  \ifbeamer@inappendix% 附录帧取附录帧页码
    \beamer@scu@count@currentframe=\insertframenumberinappendix%
    \beamer@scu@count@totalframe=\insertappendixframenumber%
  \else% 正文帧取除开附录帧页码
    \beamer@scu@count@currentframe=\insertframenumber%
    \beamer@scu@count@totalframe=\insertmainframenumber%
  \fi%
}

% 插入帧页码.
\def\insert@framenumber{% 页码显示为"x / total"
  \usebeamerfont{framenumber in head/foot}%
  \usebeamercolor[fg]{framenumber in head/foot}%
  \usebeamertemplate*{page number in head/foot}%
}

% 插入带有 Acrobat 页面跳转按钮的页码.
\def\insert@framenumberwithbutton{%
  % \raisebox{0pt}[0pt][0pt]{\rlap{xx}xx}%
  \Acrobatmenu{GoToPage}{%
    \usebeamerfont{framenumber in head/foot}%
    \usebeamercolor[fg]{framenumber in head/foot}%
    \the\beamer@scu@count@currentframe}%
  \usebeamerfont{framenumber in head/foot}%
  \textcolor{SecondaryAuxiliaryC}{~\scalebox{1.33}[0.9]{\faCaretRight}\,\the\beamer@scu@count@totalframe}%
}

% Compute Navigation Tool num.
\if\EqualOptionsBeamer{NavigationTool}{none}%
  \relax%
\else%
  \StrSubstitute{\beamer@scu@NavigationTool}{-}{, }[\NavigationTool@group]
  \StrCount{\NavigationTool@group}{,}[\NavigationTool@len]
\fi%
% 插入 Navigation Tools.
\def\insert@footnavigationtool#1#2{%
  % #1:: 组内工具间距.
  % #2:: 组间工具间距.
  \usebeamercolor[fg]{palette quaternary}%\tiny%
  \foreach \group [count=\c] in \NavigationTool@group {%
    \IfInteger{\group}{%
      \ifnum\group=1%
        % 上一小节 | 当前小节开始 | 下一小节.
        \setfontscu{5}%
        \hyperlinksubsectionendprev{\faCaretLeft}\hskip#1%
        \hyperlinksubsectionstart{\faStream}\hskip#1%
        \hyperlinksubsectionstartnext{\faCaretRight}%
      \else\ifnum\group=2%
        % 初始页 | 查找 | 结尾页.
        \setfontscu{5}%
        \hyperlinkpresentationstart{\faCaretLeft\hskip-.05em\faCaretLeft}\hskip#1%
        \setfontscu{4.5}%
        \Acrobatmenu{Find}{\faSearch}\hskip#1%
        \setfontscu{5}%
        \hyperlinkpresentationend{\faCaretRight\hskip-.05em\faCaretRight}%
      \else\ifnum\group=3%
        % 上一视图 | 全屏 | 下一视图.
        \setfontscu{4.5}%
        \Acrobatmenu{GoBack}{\faReply}\hskip#1%
        \setfontscu{5}%
        \Acrobatmenu{FullScreen}{\faExpand}\hskip#1%
        \setfontscu{4.5}%
        \Acrobatmenu{GoForward}{\reflectbox{\faReply}}%
      \fi\fi\fi%
      \ifnum\c<\numexpr\NavigationTool@len+1\relax%
        \hskip#2%
      \fi%
    }{%
      \PackageError{beamerthemescu}{%
        Improper usage: `\protect\usetheme[...]{scu}' option [NavigationTool=xxx].\MessageBreak%
        `NavigationTool' should be set to `nagate'\MessageBreak%
        or an option composed of numbers 1 to 3 and the symbol `-', such as `2', `1-3', and `1-2-3'%
      }{%
        `NavigationTool' should be set to `nagate' or an option composed of numbers 1 to 3 and the symbol `-', such as `2', `1-3', and `1-2-3'%
      }%
    }%
  }%
}

% 页脚样式定义.
\newdimen\beamer@scu@len@titlebarY% 标题导航栏 y 值
\newdimen\beamer@scu@len@pagebarX% 页码导航栏 x 值
\newdimen\beamer@scu@len@pagebarY% 页码导航栏 y 值
\newdimen\beamer@scu@len@navbarX% 功能导航栏 x 值
\newdimen\beamer@scu@len@navbarY% 功能导航栏 y 值
\def\beamer@scu@footline{%
  % 填充内容盒子.
  \setbox\beamer@scu@box@titlebar=\hbox{%
      \usebeamerfont{author in head/foot}%
      \usebeamercolor[fg]{author in head/foot}%
      \insertshortauthor\,%
      \usebeamerfont{title in head/foot}%
      \textcolor{SecondaryAuxiliaryC}{·\,}%
      \usebeamercolor[fg]{title in head/foot}%
      \insertshorttitle%
  }% 设置页脚标题导航栏盒子
  \setbox\beamer@scu@box@pagebar=\hbox{%
    \insert@framenumberwithbutton}% 设置页脚页码导航栏盒子
  % 设置 dimen.
  \beamer@scu@wd@pagebar=\wd\beamer@scu@box@pagebar% 设置页码导航栏宽度
  \beamer@scu@len@secbarY=\dimexpr.5\beamer@scu@ht@footline-1.5pt%
    -.5\ht\beamer@scu@box@titlebar+.25\dp\beamer@scu@box@titlebar\relax% 设置标题导航栏 y 值
  \beamer@scu@len@pagebarX=\dimexpr\paperwidth%
    -\beamer@scu@wd@headlineskip\relax% 设置页码导航栏 x 值
  \beamer@scu@len@pagebarY=\dimexpr.5\beamer@scu@ht@footline-1.5pt%
    -.5\ht\beamer@scu@box@pagebar+.25\dp\beamer@scu@box@pagebar\relax% 设置页码导航栏 y 值
  % 使用 picture 环境定位及绘制 Footline.
  \begin{picture}(0, 0)%
    \put(0, 0){\usebox{\beamer@scu@box@footlineBg}}% 绘制 footline 底图
    \put(64pt, \beamer@scu@len@secbarY){\box\beamer@scu@box@titlebar}% 绘制 Beamer 标题
    \put(\beamer@scu@len@pagebarX, \beamer@scu@len@pagebarY){%
      \makebox[0pt][r]{\box\beamer@scu@box@pagebar}}% 绘制带有 Acrobat 页面跳转按钮的页码
    \if\EqualOptionsBeamer{NavigationTool}{none}%
      \relax%
    \else%
      \setbox\beamer@scu@box@navbar=\hbox{%
        \insert@footnavigationtool{1.6pt}{4.2pt}}% 设置功能导航栏盒子
      \beamer@scu@len@navbarX=\dimexpr\beamer@scu@len@pagebarX%
        -\beamer@scu@wd@pagebar-6pt\relax% 设置功能导航栏 x 值
      \beamer@scu@len@navbarY=\dimexpr.5\beamer@scu@ht@footline-1.5pt%
        -.5\ht\beamer@scu@box@navbar+.25\dp\beamer@scu@box@navbar\relax% 设置功能导航栏 y 值
      \put(\beamer@scu@len@navbarX, \beamer@scu@len@navbarY){%
        \makebox[0pt][r]{\box\beamer@scu@box@navbar}}% 绘制 Navigation Tools
    \fi%
  \end{picture}%
}

% 进度条样式定义.
\def\beamer@scu@progressbar#1#2#3{%
  % #1:: 未放映部分颜色.
  % #2:: 已放映部分颜色.
  % #3:: 辅助色.
  \beamer@scu@len@probartmp=\beamer@scu@wd@probar%
  \divide\beamer@scu@len@probartmp by 1000%
  \multiply\beamer@scu@len@probartmp by \beamer@scu@count@currentframe%
  \divide\beamer@scu@len@probartmp by \beamer@scu@count@totalframe%
  \multiply\beamer@scu@len@probartmp by 1000%
  \begin{tikzpicture}[very thin, overlay, remember picture]%
    % 绘图辅助节点定义.
    \coordinate (SouthWest) at (current page.south west);% 西南节点
    \coordinate (ProBar) at ([xshift=48pt, yshift=9pt]SouthWest);% 初始节点
    % 图形绘制.
    \fill[#1] (ProBar) rectangle ++ (\beamer@scu@wd@probar, 3pt);% 未放映部分
    \fill[#2] ([yshift=9pt]SouthWest) rectangle ++ (\beamer@scu@wd@Logobar, 3pt);
    \fill[#2] (ProBar) rectangle ++ (\beamer@scu@len@probartmp, 3pt);% 已放映部分
    \fill[#3, draw=#2, line width=.48pt] ([xshift=\beamer@scu@len@probartmp, yshift=1.5pt]ProBar) circle (1.26pt);
  \end{tikzpicture}%
}

